@model List<OnlineCoursesPlatform.Models.Course>

<h2>Моите курсове</h2>

@if (!Model.Any())
{
    <p>Нямате назначени курсове.</p>
}
else
{
    <ul>
        @foreach (var course in Model)
        {
            <li>
                <strong>@course.Title</strong> — Категория: @course.Category
                <br />
                <a asp-controller="Lectures" asp-action="Create" asp-route-courseId="@course.Id" class="btn btn-sm btn-primary mt-1">
                    Добави лекция
                </a>
                <ul>
                    @foreach (var lecture in course.Lectures)
                    {
                        <li>@lecture.Title</li>
                    }
                </ul>
            </li>
        }
    </ul>
}
