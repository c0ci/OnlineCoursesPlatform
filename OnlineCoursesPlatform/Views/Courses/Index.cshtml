@model IEnumerable<OnlineCoursesPlatform.Models.Course>

<h2>Списък с курсове</h2>

<a asp-controller="Courses" asp-action="Create" class="btn btn-success mb-3">+ Създай нов курс</a>

<h2>Списък с курсове</h2>

<div class="row">
    @foreach (var course in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title">@course.Title</h5>
                        <p class="card-text text-muted mb-2">
                            Категория:
                            <span class="badge bg-secondary">@course.Category</span>
                        </p>
                        <p class="text-muted" style="font-size: 0.9em;">
                            📅 Начало: @DateTime.Now.AddDays(7).ToShortDateString()
                        </p>
                    </div>
                    <div class="mt-3">
                        <a asp-controller="Courses"
                           asp-action="Details"
                           asp-route-id="@course.Id"
                           class="btn btn-outline-primary btn-sm w-100">
                            Виж детайли
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

