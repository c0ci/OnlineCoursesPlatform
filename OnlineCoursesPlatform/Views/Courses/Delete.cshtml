@model OnlineCoursesPlatform.Models.Course

<h2>Потвърди изтриване</h2>

<div>
    <p>Сигурен ли си, че искаш да изтриеш курса <strong>@Model.Title</strong>?</p>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Изтрий</button>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Отказ</a>
    </form>
</div>
