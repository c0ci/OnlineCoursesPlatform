@model List<OnlineCoursesPlatform.Models.Course>

<h2>Админ панел – Курсове</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Заглавие</th>
            <th>Категория</th>
            <th>Лекции</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        <a asp-controller="Courses"
           asp-action="Create"
           class="btn btn-primary mb-4">
            + Създай нов курс
        </a>

        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Title</td>
                <td>@course.Category</td>
                <td>
                    <ul>
                        @foreach (var lecture in course.Lectures)
                        {
                            <li>
                                <strong>@lecture.Title</strong>
                                <a asp-controller="Lectures" asp-action="Edit" asp-route-id="@lecture.Id" class="btn btn-sm btn-warning ms-2">Редактирай</a>
                                <a asp-controller="Lectures" asp-action="Delete" asp-route-id="@lecture.Id" class="btn btn-sm btn-danger ms-2">Изтрий</a>
                            </li>
                        }
                        <a asp-controller="Lectures" asp-action="Create" asp-route-courseId="@course.Id" class="btn btn-sm btn-success mt-2">
                            + Добави лекция към този курс
                        </a>

                    </ul>
                </td>
                <td>
                    <a asp-controller="Courses" asp-action="Edit" asp-route-id="@course.Id" class="btn btn-sm btn-warning">Редактирай</a>
                    <a asp-controller="Courses" asp-action="Delete" asp-route-id="@course.Id" class="btn btn-sm btn-danger">Изтрий</a>
                </td>
            </tr>
        }
    </tbody>
</table>
