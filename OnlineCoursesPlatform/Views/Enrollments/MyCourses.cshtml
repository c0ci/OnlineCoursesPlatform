@model IEnumerable<OnlineCoursesPlatform.Models.Course>

<h2>Моите курсове</h2>

@if (!Model.Any())
{
    <p>Не си записан в никакви курсове.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Име на курс</th>
                <th>Категория</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Title</td>
                    <td>@course.Category</td>
                    <td>
                        <a asp-controller="Courses"
                           asp-action="Details"
                           asp-route-id="@course.Id"
                           class="btn btn-info btn-sm">
                            Виж
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
